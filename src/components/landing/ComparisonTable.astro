<script>
    // Workflow tabs switching
    document.querySelectorAll('.workflow-tab').forEach(tab => {
        tab.addEventListener('click', () => {
            document.querySelectorAll('.workflow-tab').forEach(t => {
                t.classList.remove('active');
                t.setAttribute('aria-selected', 'false');
            });
            tab.classList.add('active');
            tab.setAttribute('aria-selected', 'true');

            const workflow = tab.dataset.workflow;
            document.querySelectorAll('.ecosystem-workflow').forEach(w => {
                w.classList.toggle('hidden', w.dataset.workflow !== workflow);
            });
        });
    });
</script>
