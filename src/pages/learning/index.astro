    .toggle-btn.active.no { background: #ef4444; color: white; }

    .score-result {
      margin-top: var(--space-lg);
      padding: var(--space-lg);
      background: var(--bg-primary);
      border-radius: var(--border-radius);
      text-align: left;
    }

    .score-result.show { display: block; }
    .score-result .score { font-size: 2rem; font-weight: bold; color: var(--accent); }
    .score-result .recommendation { margin-top: var(--space-md); color: var(--text-secondary); }

    .patterns-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: var(--space-lg);
      margin-bottom: var(--space-2xl);
    }

    .pattern-card {
      background: var(--bg-secondary);
      border: 1px solid var(--border);
      border-radius: var(--border-radius-lg);
      padding: var(--space-xl);
      transition: all var(--transition-fast);
    }

    .pattern-card:hover { transform: translateY(-2px); box-shadow: var(--shadow-md); border-color: var(--accent); }
    .pattern-card.dependent { border-top: 4px solid #ef4444; }
