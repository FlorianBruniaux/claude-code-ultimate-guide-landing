  <script>
    const answers: Record<number, boolean> = {};

    function setAnswer(questionNum: number, isYes: boolean) {
      answers[questionNum] = isYes;
      const group = document.querySelector(`[data-question="${questionNum}"]`);
      if (!group) return;
      const yesBtn = group.querySelector('.yes');
      const noBtn = group.querySelector('.no');
      yesBtn?.classList.remove('active');
      noBtn?.classList.remove('active');
      if (isYes) yesBtn?.classList.add('active');
      else noBtn?.classList.add('active');
      if (Object.keys(answers).length === 5) updateScore();
    }

    function updateScore() {
      const score = Object.values(answers).filter(v => v === true).length;
      const scoreResult = document.getElementById('score-result');
      const scoreValue = document.getElementById('score-value');
      const recommendation = document.getElementById('recommendation');
      if (!scoreResult || !scoreValue || !recommendation) return;
      scoreValue.textContent = `${score}/5`;
      scoreResult.style.display = 'block';
      scoreResult.classList.add('show');
      if (score <= 2) {
        recommendation.innerHTML = '<strong style="color: #ef4444;">High risk of dependency.</strong><br><a href="https://github.com/FlorianBruniaux/claude-code-ultimate-guide/blob/main/guide/learning-with-ai.md#breaking-dependency" target="_blank" style="color: var(--accent);">Read the "Breaking Dependency" section &rarr;</a>';
      } else if (score <= 4) {
        recommendation.innerHTML = '<strong style="color: #f59e0b;">Room for improvement.</strong><br><a href="https://github.com/FlorianBruniaux/claude-code-ultimate-guide/blob/main/guide/learning-with-ai.md#the-uval-protocol" target="_blank" style="color: var(--accent);">Focus on the UVAL Protocol &rarr;</a>';
      } else {
        recommendation.innerHTML = '<strong style="color: #22c55e;">You\'re on the right track!</strong><br><a href="https://github.com/FlorianBruniaux/claude-code-ultimate-guide/blob/main/guide/learning-with-ai.md#optimizing-your-flow" target="_blank" style="color: var(--accent);">Check "Optimizing Your Flow" &rarr;</a>';
      }
    }

    // Wire up click handlers (replacing inline onclick)
    document.querySelectorAll('.toggle-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const group = btn.closest('.toggle-group') as HTMLElement;
        if (!group) return;
        const questionNum = parseInt(group.dataset.question || '0');
        const isYes = btn.classList.contains('yes');
        setAnswer(questionNum, isYes);
      });
    });
  </script>
