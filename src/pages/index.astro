---
import Layout from '../layouts/Layout.astro'
import HeroBanner from '../components/landing/HeroBanner.astro'
import WhyGuide from '../components/landing/WhyGuide.astro'
import PromptFormula from '../components/landing/PromptFormula.astro'
import FeaturesGrid from '../components/landing/FeaturesGrid.astro'
import GoldenRules from '../components/landing/GoldenRules.astro'
import SecurityTeaser from '../components/landing/SecurityTeaser.astro'
import ComparisonTable from '../components/landing/ComparisonTable.astro'
import Community from '../components/landing/Community.astro'
import RelatedProjects from '../components/landing/RelatedProjects.astro'

const title = 'Claude Code Guide: Templates, Security, Workflows | Anthropic CLI'
const description = 'Master Claude Code (Anthropic CLI) with 20K lines of documentation, 175 templates, 271-question quiz, security threat database (19 CVEs), and TDD/SDD/BDD workflows. Free & open-source.'

const jsonLd = [
  {
    "@context": "https://schema.org",
    "@type": "Course",
    "name": "Claude Code Ultimate Guide",
    "description": "Free, open-source guide for Claude Code (Anthropic CLI): 20K lines of documentation, 175 templates, 271-question quiz, security threat database, and methodology workflows.",
    "url": "https://cc.bruniaux.com/",
    "provider": { "@type": "Organization", "name": "Claude Code Ultimate Guide" },
    "author": {
      "@type": "Person",
      "name": "Florian BRUNIAUX",
      "url": "https://github.com/FlorianBruniaux",
      "jobTitle": "Founding Engineer"
    },
    "isAccessibleForFree": true,
    "educationalLevel": "Beginner to Advanced",
    "inLanguage": "en",
    "datePublished": "2025-06-01",
    "dateModified": "2026-02-21",
    "teaches": [
      "Claude Code CLI installation and configuration",
      "CLAUDE.md project memory files",
      "MCP server integration and security vetting",
      "Custom agents, skills, and slash commands",
      "Event hooks for automation",
      "TDD, SDD, BDD methodologies with AI",
      "Context window management",
      "Production security hardening"
    ],
    "numberOfCredits": 0,
    "hasCourseInstance": {
      "@type": "CourseInstance",
      "courseMode": "online",
      "courseWorkload": "PT10H"
    }
  }
]
---

<Layout title={title} description={description} jsonLd={jsonLd}>
  <HeroBanner />
  <WhyGuide />
  <PromptFormula />
  <FeaturesGrid />
  <GoldenRules />
  <SecurityTeaser />
  <ComparisonTable />
  <Community />
  <RelatedProjects />
</Layout>
