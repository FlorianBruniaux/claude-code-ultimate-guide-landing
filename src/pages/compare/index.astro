---
import Layout from '../../layouts/Layout.astro'

const title = 'Claude Code vs Copilot vs Cursor - AI Tools Comparison & Ecosystem'
const description = 'Compare Claude Code with GitHub Copilot and Cursor. Discover complementary AI tools and workflows for a complete development ecosystem.'

const jsonLd = [
  {
    "@type": "Article",
    "headline": "AI Tools Ecosystem: Claude Code vs Copilot vs Cursor",
    "description": "Compare AI coding tools and discover complementary workflows for maximum productivity",
    "url": "https://cc.bruniaux.com/compare/",
    "mainEntityOfPage": "https://cc.bruniaux.com/compare/",
    "author": {"@type": "Person", "name": "Florian BRUNIAUX"},
    "publisher": {"@type": "Organization", "name": "Claude Code Ultimate Guide"},
    "datePublished": "2026-02-17",
    "dateModified": "2026-02-17",
    "inLanguage": "en"
  }
]
---

<Layout title={title} description={description} ogType="article" jsonLd={jsonLd}>
  <header class="page-hero">
    <div class="container">
      <h1>AI Tools Ecosystem</h1>
      <p class="tagline">Claude Code excels at implementation. Chain it with the right tools for a complete workflow.</p>
      <a href="/" class="btn btn-secondary">&larr; Back to Guide</a>
    </div>
  </header>

  <!-- Workflow Tabs -->
  <section class="content-section">
    <h2>Workflow Patterns</h2>
    <p>Select a workflow type to see how AI tools chain together.</p>

    <div class="workflow-tabs" role="tablist" aria-label="Workflow types">
      <button class="workflow-tab active" data-workflow="standard" role="tab" aria-selected="true" aria-controls="workflow-standard">&#128203; Standard</button>
      <button class="workflow-tab" data-workflow="design" role="tab" aria-selected="false" aria-controls="workflow-design">&#127912; Design-first</button>
      <button class="workflow-tab" data-workflow="data" role="tab" aria-selected="false" aria-controls="workflow-data">&#128202; Data-driven</button>
      <button class="workflow-tab" data-workflow="docs" role="tab" aria-selected="false" aria-controls="workflow-docs">&#128218; Documentation</button>
    </div>

    <!-- Workflow: Standard (default) -->
    <div class="ecosystem-workflow" data-workflow="standard">
      <div class="workflow-step">
        <span class="workflow-step-icon">&#9997;&#65039;</span>
        <div class="workflow-step-label">Clarify</div>
        <div class="workflow-step-tool">Claude</div>
        <div class="workflow-step-output">structured request</div>
      </div>
      <span class="workflow-arrow">&rarr;</span>
      <div class="workflow-step">
        <span class="workflow-step-icon">&#128269;</span>
        <div class="workflow-step-label">Research</div>
        <div class="workflow-step-tool">Perplexity</div>
        <div class="workflow-step-output">spec.md</div>
      </div>
      <span class="workflow-arrow">&rarr;</span>
      <div class="workflow-step">
        <span class="workflow-step-icon">&#128187;</span>
        <div class="workflow-step-label">Implement</div>
        <div class="workflow-step-tool">Claude Code</div>
        <div class="workflow-step-output">working code</div>
      </div>
      <span class="workflow-arrow">&rarr;</span>
      <div class="workflow-step">
        <span class="workflow-step-icon">&#128200;</span>
        <div class="workflow-step-label">Deliver</div>
        <div class="workflow-step-tool">Kimi</div>
        <div class="workflow-step-output">presentation.pptx</div>
      </div>
    </div>

    <!-- Workflow: Design-first -->
    <div class="ecosystem-workflow hidden" data-workflow="design">
      <div class="workflow-step">
        <span class="workflow-step-icon">&#127912;</span>
        <div class="workflow-step-label">Design</div>
        <div class="workflow-step-tool">Figma / Gemini</div>
        <div class="workflow-step-output">mockup.png</div>
      </div>
      <span class="workflow-arrow">&rarr;</span>
      <div class="workflow-step">
        <span class="workflow-step-icon">&#128187;</span>
        <div class="workflow-step-label">Implement</div>
        <div class="workflow-step-tool">Claude Code</div>
        <div class="workflow-step-output">working code</div>
      </div>
      <span class="workflow-arrow">&rarr;</span>
      <div class="workflow-step">
        <span class="workflow-step-icon">&#128640;</span>
        <div class="workflow-step-label">Deploy</div>
        <div class="workflow-step-tool">Vercel / AWS</div>
        <div class="workflow-step-output">live site</div>
      </div>
    </div>

    <!-- Workflow: Data-driven -->
    <div class="ecosystem-workflow hidden" data-workflow="data">
      <div class="workflow-step">
        <span class="workflow-step-icon">&#128451;&#65039;</span>
        <div class="workflow-step-label">Explore Data</div>
        <div class="workflow-step-tool">DB / API</div>
        <div class="workflow-step-output">raw data</div>
      </div>
      <span class="workflow-arrow">&rarr;</span>
      <div class="workflow-step">
        <span class="workflow-step-icon">&#128187;</span>
        <div class="workflow-step-label">Analyze</div>
        <div class="workflow-step-tool">Claude Code</div>
        <div class="workflow-step-output">insights</div>
      </div>
      <span class="workflow-arrow">&rarr;</span>
      <div class="workflow-step">
        <span class="workflow-step-icon">&#128200;</span>
        <div class="workflow-step-label">Visualize</div>
        <div class="workflow-step-tool">Dashboard</div>
        <div class="workflow-step-output">report.html</div>
      </div>
    </div>

    <!-- Workflow: Documentation -->
    <div class="ecosystem-workflow hidden" data-workflow="docs">
      <div class="workflow-step">
        <span class="workflow-step-icon">&#128218;</span>
        <div class="workflow-step-label">Gather</div>
        <div class="workflow-step-tool">Sources</div>
        <div class="workflow-step-output">docs, code</div>
      </div>
      <span class="workflow-arrow">&rarr;</span>
      <div class="workflow-step">
        <span class="workflow-step-icon">&#128187;</span>
        <div class="workflow-step-label">Write</div>
        <div class="workflow-step-tool">Claude Code</div>
        <div class="workflow-step-output">documentation</div>
      </div>
      <span class="workflow-arrow">&rarr;</span>
      <div class="workflow-step">
        <span class="workflow-step-icon">&#127911;</span>
        <div class="workflow-step-label">Distribute</div>
        <div class="workflow-step-tool">NotebookLM</div>
        <div class="workflow-step-output">audio podcast</div>
      </div>
    </div>
  </section>

  <!-- Ecosystem Grid -->
  <section class="content-section">
    <h2>Complementary AI Tools</h2>
    <p>Each tool covers a different part of the development workflow. Claude Code handles implementation; these tools fill the gaps.</p>

    <div class="ecosystem-grid">
      <a href="https://github.com/FlorianBruniaux/claude-code-ultimate-guide/blob/main/guide/ai-ecosystem.md#1-perplexity-ai-research--sourcing" class="ecosystem-card" target="_blank" rel="noopener">
        <span class="ecosystem-card-icon" aria-hidden="true">&#128269;</span>
        <div class="ecosystem-card-title">Perplexity</div>
        <div class="ecosystem-card-desc">Deep research with verified sources</div>
        <div class="ecosystem-card-usecase">Before implementation: specs, best practices</div>
      </a>
      <a href="https://github.com/FlorianBruniaux/claude-code-ultimate-guide/blob/main/guide/ai-ecosystem.md#2-google-gemini-visual-understanding" class="ecosystem-card" target="_blank" rel="noopener">
        <span class="ecosystem-card-icon" aria-hidden="true">&#128065;</span>
        <div class="ecosystem-card-title">Gemini</div>
        <div class="ecosystem-card-desc">Visual understanding &amp; analysis</div>
        <div class="ecosystem-card-usecase">Design &rarr; Code conversion</div>
      </a>
      <a href="https://github.com/FlorianBruniaux/claude-code-ultimate-guide/blob/main/guide/ai-ecosystem.md#4-notebooklm-synthesis--audio" class="ecosystem-card" target="_blank" rel="noopener">
        <span class="ecosystem-card-icon" aria-hidden="true">&#127911;</span>
        <div class="ecosystem-card-title">NotebookLM</div>
        <div class="ecosystem-card-desc">Audio synthesis &amp; podcasts</div>
        <div class="ecosystem-card-usecase">Onboarding, doc review</div>
      </a>
      <a href="https://github.com/FlorianBruniaux/claude-code-ultimate-guide/blob/main/guide/ai-ecosystem.md#3-kimi-pptx--long-document-generation" class="ecosystem-card" target="_blank" rel="noopener">
        <span class="ecosystem-card-icon" aria-hidden="true">&#128200;</span>
        <div class="ecosystem-card-title">Kimi</div>
        <div class="ecosystem-card-desc">PPTX &amp; document generation</div>
        <div class="ecosystem-card-usecase">Code &rarr; Stakeholder deck</div>
      </a>
      <a href="https://github.com/FlorianBruniaux/claude-code-ultimate-guide/blob/main/guide/ai-ecosystem.md#6-ui-prototypers-v0-bolt-lovable" class="ecosystem-card" target="_blank" rel="noopener">
        <span class="ecosystem-card-icon" aria-hidden="true">&#9889;</span>
        <div class="ecosystem-card-title">v0 / Bolt / Lovable</div>
        <div class="ecosystem-card-desc">Rapid UI prototyping</div>
        <div class="ecosystem-card-usecase">Quick component preview</div>
      </a>
      <a href="https://github.com/FlorianBruniaux/claude-code-ultimate-guide/blob/main/guide/ai-ecosystem.md#5-ide-based-tools-cursor-windsurf-cline" class="ecosystem-card" target="_blank" rel="noopener">
        <span class="ecosystem-card-icon" aria-hidden="true">&#128187;</span>
        <div class="ecosystem-card-title">Cursor / Copilot</div>
        <div class="ecosystem-card-desc">Inline IDE autocomplete</div>
        <div class="ecosystem-card-usecase">Fast typing, small edits</div>
      </a>
      <a href="https://github.com/FlorianBruniaux/claude-code-ultimate-guide/blob/main/guide/ai-ecosystem.md#7-voice-to-text-wispr-flow" class="ecosystem-card" target="_blank" rel="noopener">
        <span class="ecosystem-card-icon" aria-hidden="true">&#127908;</span>
        <div class="ecosystem-card-title">Wispr Flow</div>
        <div class="ecosystem-card-desc">Voice-to-Text (4x faster)</div>
        <div class="ecosystem-card-usecase">Dictate prompts, hands-free coding</div>
      </a>
      <a href="https://cowork.bruniaux.com/" class="ecosystem-card ecosystem-card-highlight" target="_blank" rel="noopener">
        <span class="ecosystem-card-icon" aria-hidden="true">&#128188;</span>
        <div class="ecosystem-card-title">Claude Cowork</div>
        <div class="ecosystem-card-desc">Desktop AI for knowledge workers</div>
        <div class="ecosystem-card-usecase">File automation, document creation</div>
        <span class="ecosystem-badge">New Guide</span>
      </a>
    </div>

    <div class="ecosystem-cta">
      <a href="https://github.com/FlorianBruniaux/claude-code-ultimate-guide/blob/main/guide/ai-ecosystem.md" class="btn btn-secondary" target="_blank" rel="noopener">Full Ecosystem Guide &rarr;</a>
    </div>
  </section>

  <!-- CTA -->
  <section class="content-section">
    <div class="cta-section">
      <h2>Master Claude Code</h2>
      <p>The Ultimate Guide covers everything: setup, CLAUDE.md, agentic workflows, MCP, hooks, and more.</p>
      <div class="cta-buttons">
        <a href="/" class="btn btn-primary">Explore the Guide &rarr;</a>
      </div>
    </div>
  </section>

  <style>
    /* Hero */
    /* Content sections */
    .content-section {
      max-width: var(--max-width);
      margin: 0 auto;
      padding: var(--space-2xl) var(--space-lg);
    }

    .content-section h2 {
      font-size: 1.75rem;
      margin-bottom: var(--space-lg);
      padding-bottom: var(--space-sm);
      border-bottom: 2px solid var(--accent);
    }

    .content-section > p {
      color: var(--text-secondary);
      margin-bottom: var(--space-xl);
    }

    /* Workflow tabs */
    .workflow-tabs {
      display: flex;
      justify-content: flex-start;
      gap: var(--space-xs);
      margin-bottom: var(--space-md);
      flex-wrap: wrap;
    }
    .workflow-tab {
      padding: var(--space-xs) var(--space-sm);
      border: 1px solid var(--border);
      border-radius: var(--border-radius);
      background: var(--bg-secondary);
      color: var(--text-secondary);
      cursor: pointer;
      font-size: 0.85rem;
      transition: all 0.2s ease;
    }
    .workflow-tab:hover {
      border-color: var(--accent);
      color: var(--text-primary);
    }
    .workflow-tab.active {
      background: var(--accent);
      color: white;
      border-color: var(--accent);
    }

    /* Workflow diagram */
    .ecosystem-workflow {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: var(--space-md);
      margin: var(--space-xl) 0;
      flex-wrap: wrap;
      padding: var(--space-lg);
      background: var(--bg-secondary);
      border-radius: var(--border-radius-lg);
      border: 1px solid var(--border);
    }
    .ecosystem-workflow.hidden { display: none; }
    .workflow-step {
      text-align: center;
      padding: var(--space-md);
    }
    .workflow-step-icon {
      font-size: 1.5rem;
      margin-bottom: var(--space-xs);
      display: block;
    }
    .workflow-step-label {
      font-weight: 600;
      font-size: 0.9rem;
      color: var(--text-primary);
      margin-bottom: var(--space-xs);
    }
    .workflow-step-tool {
      font-size: 0.8rem;
      color: var(--accent);
    }
    .workflow-step-output {
      font-size: 0.75rem;
      color: var(--text-muted);
      font-family: var(--font-mono);
    }
    .workflow-arrow {
      color: var(--accent);
      font-size: 1.5rem;
      font-weight: 700;
    }

    /* Ecosystem grid */
    .ecosystem-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: var(--space-lg);
      margin-top: var(--space-xl);
    }
    .ecosystem-card {
      background: var(--surface-elevated);
      border: 1px solid var(--border);
      border-radius: var(--border-radius-lg);
      padding: var(--space-lg);
      box-shadow: var(--shadow-sm);
      transition: transform var(--transition-normal), border-color var(--transition-normal), box-shadow var(--transition-normal);
      text-decoration: none;
      display: block;
    }
    .ecosystem-card:hover {
      transform: translateY(-4px);
      border-color: var(--accent);
      box-shadow: var(--shadow-card-hover);
      text-decoration: none;
    }
    .ecosystem-card-icon {
      font-size: 2rem;
      margin-bottom: var(--space-sm);
      display: block;
    }
    .ecosystem-card-title {
      font-weight: 600;
      font-size: 1.1rem;
      margin-bottom: var(--space-xs);
      color: var(--text-primary);
    }
    .ecosystem-card-desc {
      color: var(--text-secondary);
      font-size: 0.9rem;
      margin-bottom: var(--space-sm);
      line-height: 1.5;
    }
    .ecosystem-card-usecase {
      font-size: 0.8rem;
      color: var(--accent);
      font-weight: 500;
    }
    .ecosystem-card-highlight {
      position: relative;
      border: 2px solid var(--accent);
      background: var(--surface-elevated);
    }
    .ecosystem-card-highlight:hover {
      border-color: var(--accent-hover);
    }
    .ecosystem-badge {
      position: absolute;
      top: -10px;
      right: -10px;
      background: var(--accent);
      color: white;
      font-size: 0.7rem;
      font-weight: 600;
      padding: 4px 8px;
      border-radius: 12px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    /* Ecosystem CTA */
    .ecosystem-cta {
      text-align: left;
      margin-top: var(--space-xl);
    }

    /* CTA section */
    .cta-section {
      text-align: left;
      background: var(--bg-secondary);
      border: 1px solid var(--border);
      border-radius: var(--border-radius-lg);
      padding: var(--space-3xl);
      margin: var(--space-2xl) 0;
    }

    .cta-section h2 { border: none; padding: 0; }
    .cta-section p { color: var(--text-secondary); margin-bottom: var(--space-xl); }
    .cta-buttons { display: flex; gap: var(--space-md); justify-content: flex-start; flex-wrap: wrap; }

    /* Responsive */
    @media (max-width: 640px) {
      .ecosystem-workflow {
        flex-direction: column;
        gap: var(--space-sm);
      }
      .workflow-arrow { transform: rotate(90deg); }
      .ecosystem-grid { grid-template-columns: 1fr; }
    }
  </style>

  <script>
    // Workflow tabs switching
    document.querySelectorAll('.workflow-tab').forEach(tab => {
      tab.addEventListener('click', () => {
        document.querySelectorAll('.workflow-tab').forEach(t => {
          t.classList.remove('active');
          t.setAttribute('aria-selected', 'false');
        });
        (tab as HTMLElement).classList.add('active');
        (tab as HTMLElement).setAttribute('aria-selected', 'true');

        const workflow = (tab as HTMLElement).dataset.workflow;
        document.querySelectorAll('.ecosystem-workflow').forEach(w => {
          (w as HTMLElement).classList.toggle('hidden', (w as HTMLElement).dataset.workflow !== workflow);
        });
      });
    });
  </script>
</Layout>
