  <style>
    /* ── HERO ─────────────────────────────────────────────────────────────── */
    .compare-hero {
      padding: var(--space-3xl) 0 var(--space-2xl);
      background-color: var(--bg-primary);
      background-image: linear-gradient(160deg, var(--bg-secondary) 0%, var(--bg-primary) 60%);
      border-bottom: 1px solid var(--border);
    }

    .compare-hero-breadcrumb {
      display: flex;
      align-items: center;
      gap: var(--space-sm);
      margin-bottom: var(--space-lg);
      font-size: 0.85rem;
      color: var(--text-muted);
    }

    .compare-hero-breadcrumb a {
      color: var(--accent);
      text-decoration: none;
      transition: color 0.15s ease;
    }

    .compare-hero-breadcrumb a:hover { color: var(--accent-hover); }

    .compare-hero h1 {
      font-size: clamp(1.75rem, 4vw, 2.75rem);
      font-weight: 700;
      letter-spacing: -0.02em;
      margin-bottom: var(--space-md);
    }

    .compare-hero-tagline {
      font-size: 1.1rem;
      color: var(--text-secondary);
      max-width: 600px;
      margin-bottom: var(--space-xl);
      line-height: 1.6;
    }

    .compare-hero-nav {
      display: flex;
      flex-wrap: wrap;
      gap: var(--space-sm);
    }

    .compare-nav-pill {
      display: inline-block;
      padding: 0.35rem 0.9rem;
      border: 1px solid var(--border);
      border-radius: 20px;
      font-size: 0.85rem;
      color: var(--text-secondary);
      text-decoration: none;
      background: var(--bg-secondary);
      transition: all 0.15s ease;
    }

    .compare-nav-pill:hover {
      border-color: var(--accent);
      color: var(--accent);
      text-decoration: none;
    }

    /* ── SECTIONS ─────────────────────────────────────────────────────────── */
    .compare-section {
      padding: var(--space-3xl) 0;
      border-bottom: 1px solid var(--border);
    }

    .compare-section--alt {
      background-color: var(--bg-secondary);
    }

    .compare-section--cta {
      border-bottom: none;
    }

    .compare-section-header {
      margin-bottom: var(--space-2xl);
    }

    .compare-section-header h2 {
      font-size: 1.75rem;
      font-weight: 700;
      margin-bottom: var(--space-sm);
      padding-bottom: var(--space-sm);
      border-bottom: 2px solid var(--accent);
      display: inline-block;
    }

    .compare-section-header p {
      color: var(--text-secondary);
      margin-top: var(--space-md);
      max-width: 640px;
    }

    /* ── GUIDE COMPARISON TABLE ───────────────────────────────────────────── */
    .guide-table-wrapper {
      overflow-x: auto;
      border-radius: var(--border-radius-lg);
      border: 1px solid var(--border);
      margin-bottom: var(--space-2xl);
    }

    .guide-comparison-table {
      width: 100%;
      border-collapse: collapse;
      font-size: 0.95rem;
      background-color: var(--bg-secondary);
    }

    .guide-comparison-table th,
    .guide-comparison-table td {
      padding: var(--space-md) var(--space-lg);
      text-align: left;
      border-bottom: 1px solid var(--border);
    }

    .guide-comparison-table th {
      background-color: var(--bg-tertiary);
      font-weight: 600;
      color: var(--text-primary);
      white-space: nowrap;
    }

    .guide-comparison-table th:first-child,
    .guide-comparison-table td:first-child {
      position: sticky;
      left: 0;
      z-index: 1;
    }

    .guide-comparison-table th:first-child { background-color: var(--bg-tertiary); }
    .guide-comparison-table td:first-child { background-color: var(--bg-secondary); font-weight: 500; }
    .guide-comparison-table tbody tr:hover { background-color: var(--bg-tertiary); }
    .guide-comparison-table tbody tr:last-child td { border-bottom: none; }

    .gc-yes { color: var(--status-success); font-weight: 600; }
    .gc-no { color: #8b949e; }
    .gc-partial { color: var(--status-warning); font-weight: 500; }

    /* ── RECOMMENDED WORKFLOW ─────────────────────────────────────────────── */
    .recommended-workflow h3 {
      font-size: 1.2rem;
      font-weight: 700;
      margin-bottom: var(--space-xs);
    }

    .recommended-workflow-sub {
      color: var(--text-secondary);
      font-size: 0.9rem;
      margin-bottom: var(--space-xl);
    }

    .workflow-steps-row {
      display: flex;
      align-items: stretch;
      gap: var(--space-md);
    }

    .workflow-step-card {
      flex: 1;
      display: flex;
      align-items: flex-start;
      gap: var(--space-md);
      background-color: var(--surface-elevated);
      border: 1px solid var(--border);
      border-radius: var(--border-radius-lg);
      padding: var(--space-lg) var(--space-xl);
      box-shadow: var(--shadow-sm);
    }

    .ws-num {
      display: flex;
      align-items: center;
      justify-content: center;
      min-width: 32px;
      height: 32px;
      background-color: var(--accent-tertiary);
      color: #fff;
      font-weight: 700;
      font-size: 0.9rem;
      border-radius: 50%;
      flex-shrink: 0;
    }

    .ws-content strong {
      display: block;
      color: var(--text-primary);
      font-size: 0.95rem;
      font-weight: 700;
      margin-bottom: var(--space-xs);
    }

    .ws-content p {
      color: var(--text-secondary);
      font-size: 0.85rem;
      line-height: 1.5;
      margin: 0 0 var(--space-sm);
    }

    .ws-tag {
      display: inline-block;
      padding: 2px var(--space-sm);
      background-color: var(--bg-tertiary);
      color: var(--text-muted);
      font-size: 0.72rem;
      font-weight: 600;
      border-radius: var(--border-radius);
      font-family: var(--font-mono);
    }

    .workflow-arrow-sep {
      display: flex;
      align-items: center;
      font-size: 1.25rem;
      color: var(--text-muted);
      flex-shrink: 0;
      padding-top: var(--space-md);
    }

    /* ── ECOSYSTEM GRID ───────────────────────────────────────────────────── */
    .ecosystem-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      gap: var(--space-lg);
    }

    .ecosystem-card {
      background: var(--surface-elevated);
      border: 1px solid var(--border);
      border-radius: var(--border-radius-lg);
      padding: var(--space-lg);
      box-shadow: var(--shadow-sm);
      transition: transform var(--transition-normal), border-color var(--transition-normal), box-shadow var(--transition-normal);
      text-decoration: none;
      display: block;
      position: relative;
    }

    .ecosystem-card:hover {
      transform: translateY(-4px);
      border-color: var(--accent);
      box-shadow: var(--shadow-card-hover);
      text-decoration: none;
    }

    .ecosystem-card-icon { font-size: 2rem; margin-bottom: var(--space-sm); display: block; }
    .ecosystem-card-title { font-weight: 600; font-size: 1.05rem; margin-bottom: var(--space-xs); color: var(--text-primary); }
    .ecosystem-card-desc { color: var(--text-secondary); font-size: 0.875rem; margin-bottom: var(--space-sm); line-height: 1.5; }
    .ecosystem-card-usecase { font-size: 0.8rem; color: var(--accent); font-weight: 500; }

    .ecosystem-card-highlight { border: 2px solid var(--accent); }
    .ecosystem-card-highlight:hover { border-color: var(--accent-hover); }

    .ecosystem-badge {
      position: absolute;
      top: -10px;
      right: -10px;
      background: var(--accent);
      color: white;
      font-size: 0.7rem;
      font-weight: 600;
      padding: 4px 8px;
      border-radius: 12px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .ecosystem-footer-cta { margin-top: var(--space-xl); }

    /* ── WORKFLOW PATTERNS ────────────────────────────────────────────────── */
    .workflow-tabs {
      display: flex;
      flex-wrap: wrap;
      gap: var(--space-xs);
      margin-bottom: var(--space-md);
    }

    .workflow-tab {
      padding: var(--space-xs) var(--space-sm);
      border: 1px solid var(--border);
      border-radius: var(--border-radius);
      background: var(--bg-secondary);
      color: var(--text-secondary);
      cursor: pointer;
      font-size: 0.85rem;
      transition: all 0.2s ease;
    }

    .workflow-tab:hover { border-color: var(--accent); color: var(--text-primary); }
    .workflow-tab.active { background: var(--accent); color: white; border-color: var(--accent); }

    .ecosystem-workflow {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: var(--space-md);
      padding: var(--space-lg);
      background: var(--bg-secondary);
      border-radius: var(--border-radius-lg);
      border: 1px solid var(--border);
      flex-wrap: wrap;
    }

    .ecosystem-workflow.hidden { display: none; }

    .workflow-step { text-align: center; padding: var(--space-md); }
    .workflow-step-icon { font-size: 1.5rem; margin-bottom: var(--space-xs); display: block; }
    .workflow-step-label { font-weight: 600; font-size: 0.9rem; color: var(--text-primary); margin-bottom: var(--space-xs); }
    .workflow-step-tool { font-size: 0.8rem; color: var(--accent); }
    .workflow-step-output { font-size: 0.75rem; color: var(--text-muted); font-family: var(--font-mono); }
    .workflow-arrow { color: var(--accent); font-size: 1.5rem; font-weight: 700; }

    /* ── CTA BLOCK ────────────────────────────────────────────────────────── */
    .cta-block {
      background: var(--bg-secondary);
      border: 1px solid var(--border);
      border-radius: var(--border-radius-lg);
      padding: var(--space-3xl);
    }

    .cta-block h2 { font-size: 1.5rem; margin-bottom: var(--space-sm); }
    .cta-block p { color: var(--text-secondary); margin-bottom: var(--space-xl); max-width: 540px; }
    .cta-block-btns { display: flex; gap: var(--space-md); flex-wrap: wrap; }

    /* ── RESPONSIVE ───────────────────────────────────────────────────────── */
    @media (max-width: 768px) {
      .workflow-steps-row { flex-direction: column; }
      .workflow-arrow-sep { transform: rotate(90deg); justify-content: center; padding: 0; }
      .guide-comparison-table th, .guide-comparison-table td { padding: var(--space-sm) var(--space-md); font-size: 0.85rem; }
    }

    @media (max-width: 640px) {
      .ecosystem-workflow { flex-direction: column; gap: var(--space-sm); }
      .workflow-arrow { transform: rotate(90deg); }
      .ecosystem-grid { grid-template-columns: 1fr; }
      .compare-hero-nav { gap: var(--space-xs); }
    }
  </style>

  <script>
    document.querySelectorAll('.workflow-tab').forEach(tab => {
      tab.addEventListener('click', () => {
        document.querySelectorAll('.workflow-tab').forEach(t => {
          t.classList.remove('active');
          t.setAttribute('aria-selected', 'false');
        });
        (tab as HTMLElement).classList.add('active');
        (tab as HTMLElement).setAttribute('aria-selected', 'true');

        const workflow = (tab as HTMLElement).dataset.workflow;
        document.querySelectorAll('.ecosystem-workflow').forEach(w => {
          (w as HTMLElement).classList.toggle('hidden', (w as HTMLElement).dataset.workflow !== workflow);
        });
      });
    });
  </script>

</Layout>
